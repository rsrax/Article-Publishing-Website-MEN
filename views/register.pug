extends layout
block append head
  link(rel='stylesheet', href='../stylesheets/LoginRegstyle.css')
block content
  .container-fluid
    .row.no-gutter
      // The image half
      .col-md-6.d-none.d-md-flex.bg-image
      // The content half
      .col-md-6.bg-light
        .login.d-flex.align-items-center.py-5
          // Demo content
          .container
            .row
              .col-lg-10.col-xl-7.mx-auto
                h3.display-4 Medium
                each err in error
                  .alert.alert-danger(role='alert')= err
                p.text-muted.mb-4 Registration Form
                form(role='form', action="/register",method="post", style='max-width: 300px;')
                  .form-group
                    input.form-control(type='text', name="username", placeholder='Enter Username')
                  .form-group
                    input.form-control(type='text', name="name", placeholder='Enter Name')
                  .form-group
                    input.form-control(type='email', name="email", placeholder='Enter Email')
                  .form-group
                    input.form-control(type='password', name="password", placeholder='Enter Password')
                  .form-group
                    input.form-control(type='password', name="C_password", placeholder='Confirm Password')
                  .form-group
                    input.form-control(type='date', name="DOB", placeholder='Enter DOB')
                  .form-group
                    input.form-control(type='text', name="ContactNo", placeholder='Enter Contact Number')
                  button.btn.btn-default(type='submit') Submit
                  .text-center.d-flex.justify-content-between.mt-4
                    p
                      a.font-italic.text-muted(href='/login')
                        u I am already member
          // End
          // End
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8', crossorigin='anonymous')
