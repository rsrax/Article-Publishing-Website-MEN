doctype html
html
  head
    block head
      title= Medium
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0' crossorigin='anonymous')
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/LoginRegstyle.css')
      link(href='/stylesheets/UserProfile.css' rel='stylesheet')
      link(href='/stylesheets/Error404.css' rel='stylesheet')
  body(style="padding:0;")
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      // Container wrapper
      .container-fluid
        // Navbar brand
        a.navbar-brand(href='/') Medium
        // Toggle button
        button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          i.fas.fa-bars
        // Collapsible wrapper
        #navbarSupportedContent.collapse.navbar-collapse
          // Left links
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            if(!user)
              li.nav-item
                a.nav-link(href='/login') Login
            if(!user)
              li.nav-item
                a.nav-link(href='/register') Register
            if(user)
              li.nav-item
                a.nav-link.bg-success(href='/articles/new') New Article
            if(user)
              li.nav-item
                a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') You are currently logged in as #{user.username}
              li.nav-item
                a.nav-link(href='/logout') Logout
            if(!user)
              li.nav-item
                a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') You are not logged in.
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar-list-4' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
              span.navbar-toggler-icon
            #navbar-list-4.collapse.navbar-collapse
              ul.navbar-nav
                li.nav-item.dropdown
                  a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                    img.rounded-circle(src='https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg' width='40' height='40')
                  .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                    a.dropdown-item(href='#') Dashboard
                    a.dropdown-item(href='#') Edit Profile
                    a.dropdown-item(href='#') Log Out
          // Left links
          // Search form
          form.d-flex.input-group.w-auto
            input.form-control(type='search' placeholder='Type query' aria-label='Search')
            button.btn.btn-outline-primary(type='button' data-mdb-ripple-color='dark')
              | Search
        // Collapsible wrapper
        // Container wrapper
        // Navbar
    div.container(style='width:90%')
      block content

  script(src='https://code.jquery.com/jquery.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8' crossorigin='anonymous')

