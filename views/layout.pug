doctype html
html
  head
    block head
      title= Medium
      meta(name='google-site-verification' content='X_7utZ1AZmvgcEmRzav3ElAreytEgxZQ8fvU7tPa578')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href='/stylesheets/bootstrap.min.css' rel='stylesheet' )
      link(rel='stylesheet', href='/stylesheets/style.css')
  body(style="padding:0;background:-webkit-linear-gradient(left, #f1ca89, #9f5f80);")
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      // Container wrapper
      .container-fluid
        // Navbar brand
        a.navbar-brand(href='/') Medium
        // Toggle button
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        // Collapsible wrapper
        #navbarSupportedContent.collapse.navbar-collapse
          // Left links
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            if(user == null)
              li.nav-item
                a.nav-link(href='/login') Login
            if(user == null)
              li.nav-item
                a.nav-link(href='/register') Register
            if(user != null)
              li.nav-item
                a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') You are currently logged in as #{user.username}
            if(user == null)
              li.nav-item
                a.nav-link.disabled(tabindex='-1' aria-disabled='true') You are not logged in.
        // Left links
        if(user != null)
          ul.nav.navbar-nav.ms-auto.w-auto.justify-content-end
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                img.rounded-circle(src=`${user.profilePic}` width='40' height='40')
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href=`/users/profile/${user._id}`) View Profile
                li
                  a.dropdown-item(href='/articles/new') Write An Article
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href='/logout') Logout
          // Search form
        form.d-flex
          input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
          button.btn.btn-outline-light(type='submit') Search
        // Collapsible wrapper
        // Container wrapper
        // Navbar
    div.container(style='width:95%;padding:0%')
      block content

  script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
