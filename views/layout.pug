doctype html
html
  head
    title= Medium
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0' crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/LoginRegstyle.css')
    link(href='/stylesheets/UserProfile.css' rel='stylesheet')
  body(style="padding:0;")
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      // Container wrapper
      .container-fluid
        // Navbar brand
        a.navbar-brand(href='/') Medium
        // Toggle button
        button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          i.fas.fa-bars
        // Collapsible wrapper
        #navbarSupportedContent.collapse.navbar-collapse
          // Left links
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            if(!user)
              li.nav-item
                a.nav-link(href='/login') Login
            if(!user)
              li.nav-item
                a.nav-link(href='/register') Register
            if(user)
              li.nav-item
                a.nav-link.bg-success(href='/articles/new') New Article
            if(user)
              li.nav-item
                a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') You are currently logged in as #{user.username}
              li.nav-item
                a.nav-link(href='/logout') Logout
            if(!user)
              li.nav-item
                a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') You are not logged in.
          // Left links
          // Search form
          form.d-flex.input-group.w-auto
            input.form-control(type='search' placeholder='Type query' aria-label='Search')
            button.btn.btn-outline-primary(type='button' data-mdb-ripple-color='dark')
              | Search
        // Collapsible wrapper
        // Container wrapper
        // Navbar
    div.container(style='width:90%')
      block content

  script(src='http://code.jquery.com/jquery.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8' crossorigin='anonymous')


