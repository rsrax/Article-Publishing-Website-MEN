doctype html
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0', crossorigin='anonymous')
  link(rel='stylesheet', href='../stylesheets/LoginRegstyle.css')
  title Medium-Log in
.container-fluid
  .row.no-gutter
    // The image half
    .col-md-6.d-none.d-md-flex.bg-image
    // The content half
    .col-md-6.bg-light
      .login.d-flex.align-items-center.py-5
        // Demo content
        .container
          .row
            .col-lg-10.col-xl-7.mx-auto
              h3.display-4 Medium
              p.text-muted.mb-4 Enter your email address and password to login.
              form(role='form', action="/login",method="post", style='max-width: 300px;')
                .form-group
                  input.form-control(type='text', name="username", placeholder='Enter Username')
                .form-group
                  input.form-control(type='password', name="password", placeholder='Password')
                button.btn.btn-default(type='submit') Submit
                .text-center.d-flex.justify-content-between.mt-4
                  p
                    a.font-italic.text-muted(href='/register')
                      u  Create an account
        // End
    // End
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8', crossorigin='anonymous')
